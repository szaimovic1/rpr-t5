    <children>
        <Label fx:id="display" alignment="CENTER_RIGHT" maxHeight="Infinity" maxWidth="Infinity" text="${controller.broj}" GridPane.columnSpan="4" />
        <Button fx:id="btn0" maxWidth="Infinity" onAction="#nulaBtn" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
