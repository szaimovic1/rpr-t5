        <Button fx:id="modulBtn" maxWidth="Infinity" onAction="#modulBtn" text="\%" GridPane.rowIndex="1" />
        <Button fx:id="minusBtn" maxWidth="Infinity" onAction="#minusBtn" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />
